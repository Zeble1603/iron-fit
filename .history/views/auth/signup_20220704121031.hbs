<h2 class="user-title">Create a USER</h2>

<form action="/signup" method="post" class="form-container">
  <div>
    <label for="username">
      Username:</label>
    <input id="username" type="text" name="username" placeholder="ironhacker" />
  </div>
  <div>
    <label for="password">
      Password:</label>
    <input
      id="password"
      type="password"
      name="password"
      placeholder="********"
    />
  </div>
  <button type="submit"> Create Account </button>
  {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
  {{/if}}
  {{#if message}}
    <div class="error-message">{{message}}</div>
  {{/if}}
  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>

</form>