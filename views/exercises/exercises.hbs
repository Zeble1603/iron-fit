<h2>Liste des exercices </h2>
<label for="Body Part">Filter by body part:</label>

<select name="Body Part" id="bodypart">
  {{#each allBodyParts }}
    <option value={{this}}>{{this}}</option>
  {{/each}}
</select>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body Part</th>
      <th>Target Muscle</th>
      <th>Equipment</th>
    </tr>
  </thead>
  <tbody>
    {{#each exercisesList }}
        <tr>
            <td><a href="/exercises/exercise-detail/{{id}}">{{ name }}</a></td>
            <td>{{ bodyPart }}</td>
            <td>{{ target }}</td>
            <td>{{ equipment }}</td>
        </tr>
    {{/each}}
  </tbody>
</table>  
