<div class="container-detail">
  <p class="card-title">{{rutina.name}}</p>

  <button hidden id="timerButton" value="stop"></button>
  {{#each workout }}
    <div class="workout-row">
      <div class="title-container">
        <p class="exercise-name">{{name}}</p>
      </div>
      <div class="input-container">
      <form action="/edit/{{_id}}/{{../rutina._id}}" method="POST">
      {{#if workout.needtime}}
      <input name="time" class="input-workout" type="number" value="{{time}}"/><span>Time</span>
      {{else}}
      <input name="repetition" class="input-workout" type="number" value="{{repetition}}"/><span>Rep.</span>
      <input name="weight" class="input-workout" type="number" value="{{weight}}"/><span>Kg.</span>
      {{/if}}
      <button type="submit" class="anchor-button">Save</button>
      </form>
      </div>
      <div class="button-container">
        <a class="anchor-button" href="/workout/{{_id}}/{{../rutina._id}}">Exercise detail</a>
        {{#if ../rutina.started}}
        <form action="/done/{{_id}}/{{../rutina._id}}" method="POST">
          <button type="submit" class="anchor-button">Done</button>
        </form>  
        {{/if}}
        <form action="/delete/{{_id}}/{{../rutina._id}}" method="POST">
          <button type="submit" class="anchor-button">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
  {{#if rutina.started}}
    <form action="/stop/{{rutina._id}}" method="POST">
      <button id="stopButton" class="start-button anchor-button">Stop</button>
    </form>
    <p id="chrono">00:00</p>
    {{ else }}
    <a href="/exercises/{{rutina._id}}" class="anchor-button add-workout">Add an exercise</a>
    <form action="/start/{{rutina._id}}" method="POST">
      <button id="startButton" class="start-button anchor-button">Start</button>
    </form>
  {{/if}}
  
</div>

<script src="/js/rutina.script.js"></script>